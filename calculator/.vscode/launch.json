{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug calculator",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/calculator", // Path to your executable
      "args": [], // Command-line arguments if needed
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "gcc build", // Assuming you have a task named "gcc build" for compilation
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe" // Path to your gdb executable
    }
  ]
}
